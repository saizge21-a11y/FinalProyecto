@{
    Layout = null;
    var title = ViewBag.Title as string ?? "Autenticación";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <style>
        body {
            background: #f6f7fb;
        }

        .auth-container {
            max-width: 420px;
            margin: 8vh auto;
        }

        .card {
            border-radius: 16px;
            box-shadow: 0 10px 20px rgba(0,0,0,.08);
        }

        .brand {
            font-weight: 700;
            letter-spacing: .3px;
        }
    </style>
</head>
<body>
    <div class="auth-container">
        <div class="text-center mb-4">
            <div class="brand h3 m-0">FinalProyecto</div>
            <small class="text-muted">Acceso</small>
        </div>
        <div class="card p-4">
            @RenderBody()
        </div>
        <div class="text-center mt-3">
            <small class="text-muted">© @DateTime.Now.Year FinalProyecto</small>
        </div>
    </div>
    <script src="~/Scripts/jquery-3.5.1.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
</body>
</html>
